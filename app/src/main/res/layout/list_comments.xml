<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="20dp"
    android:layout_marginVertical="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/faveThumbContainer"
            android:layout_width="wrap_content"
            android:layout_centerInParent="true"
            android:layout_alignParentLeft="true"
            android:layout_height="wrap_content">

            <com.mikhaellopez.circularimageview.CircularImageView
                android:layout_centerInParent="true"
                android:layout_alignParentLeft="true"
                android:id="@+id/profileThumb"
                android:layout_width="70dp"
                android:foreground="@drawable/fg_circular_green"
                android:src="@drawable/ic_radyo_icon"
                android:layout_height="70dp"
                android:scaleType="fitCenter"/>
        </RelativeLayout>

        <LinearLayout
            android:layout_centerInParent="true"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="5dp"
            android:layout_toRightOf="@id/faveThumbContainer"
            android:orientation="vertical"
            android:layout_marginRight="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/txtUserName"
                    android:lineSpacingMultiplier="0"
                    android:lineSpacingExtra="20sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="-"
                    android:layout_gravity="center"
                    android:textColor="@color/black"
                    android:textSize="14dp"
                    android:layout_marginRight="7dp"
                    android:fontFamily="@font/gotham_medium"
                    android:lines="1"
                    android:ellipsize="end" />

                <TextView
                    android:layout_marginTop="0.2dp"
                    android:id="@+id/txtDate"
                    android:layout_gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/faveTitle"
                    android:fontFamily="@font/century_gothic_regular"
                    android:layout_toRightOf="@id/faveThumbContainer"
                    android:text="-"
                    android:lineSpacingMultiplier="1.1"
                    android:textColor="@color/gray"
                    android:textSize="12dp"
                    android:maxLines="2"
                    android:ellipsize="end"/>
            </LinearLayout>

            <TextView
                android:id="@+id/txtComment"
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/metropolis_medium"
                android:text="-"
                android:textColor="#737373"
                android:textSize="10dp"
                android:textStyle="bold" />

        </LinearLayout>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray"
        android:layout_marginTop="8dp"/>
</LinearLayout>