<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_height="wrap_content"
    android:layout_width="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:gravity="center_horizontal">

    <RelativeLayout
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginHorizontal="8dp"
        android:layout_marginVertical="10dp">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/thumbContainer"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:nestedScrollingEnabled="false"/>

        <ImageView
            android:id="@+id/createPlaylistBtn"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginRight="3dp"
            android:background="#efefef"
            android:src="@drawable/ic_plus_sign"
            android:layout_alignParentRight="true"
            android:scaleType="fitCenter"
            android:padding="20dp"
            android:visibility="visible"
            app:tint="@color/red"/>

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/thumbContainer"
            android:layout_alignEnd="@+id/thumbContainer"
            android:layout_alignRight="@+id/thumbContainer"
            android:layout_margin="5dp"
            android:visibility="gone"
            app:cardBackgroundColor="@color/lightGray"
            app:cardCornerRadius="3dp">

            <TextView
                android:id="@+id/playlistItems"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="3dp"
                android:gravity="center"
                android:padding="3dp"
                android:text="1 item"
                android:textColor="@color/gray"
                android:textSize="10sp" />
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/playlistName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/thumbContainer"
            android:layout_alignLeft="@+id/thumbContainer"
            android:layout_alignRight="@+id/thumbContainer"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="4dp"
            android:fontFamily="@font/metropolis_medium"
            android:layout_marginRight="0dp"
            android:ellipsize="end"
            android:gravity="center"
            android:maxLines="1"
            android:lineSpacingMultiplier="1.08"
            android:text="Unknown Playlist"
            android:textSize="12dp" />

    </RelativeLayout>
</LinearLayout>