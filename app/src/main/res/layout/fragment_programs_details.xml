<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:animateLayoutChanges="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/imgOtherOption"
        android:layout_margin="40dp"
        android:layout_alignParentRight="true"
        android:background="@drawable/ic_options"
        android:layout_width="10dp"
        android:visibility="invisible"
        android:layout_height="25dp"/>

    <LinearLayout
        android:layout_marginRight="10dp"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="20dp"
        android:layout_centerInParent="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:id="@+id/layoutHeader"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/programsThumb"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:scaleType="fitCenter"
            app:shapeAppearanceOverlay="@style/allRounded6dp"/>

        <LinearLayout
            android:layout_marginLeft="15dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/programsTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Loading..."
                android:fontFamily="@font/metropolis_bold"
                android:textColor="@color/black"
                android:maxLines="2"
                android:lineSpacingMultiplier="0"
                android:lineSpacingExtra="19dp"
                android:textSize="17dp"/>
            <!--    android:layout_alignLeft="@+id/programsThumb"-->
            <!--    android:layout_alignRight="@+id/programsThumb"-->

            <TextView
                android:layout_toRightOf="@+id/programsThumb"
                android:layout_below="@+id/programsTitle"
                android:id="@+id/programEpisodes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Loading..."
                android:fontFamily="@font/metropolis_medium"
                android:textColor="#737373"
                android:maxLines="2"
                android:lineSpacingMultiplier="0"
                android:lineSpacingExtra="19dp"
                android:textSize="13dp"/>

            <RelativeLayout
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="55dp">

                <TextView
                    android:layout_toLeftOf="@+id/imgShowDesc"
                    android:visibility="visible"
                    android:layout_alignParentLeft="true"
                    android:id="@+id/programDescHeader"
                    android:layout_marginRight="15dp"
                    android:textSize="12dp"
                    android:textColor="#545454"
                    android:lineSpacingMultiplier="1.3"
                    android:fontFamily="@font/gotham_book"
                    android:text="-"
                    android:maxLines="3"
                    android:ellipsize="end"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <ImageView
                    android:layout_marginTop="-25dp"
                    android:layout_below="@+id/programDescHeader"
                    android:visibility="invisible"
                    android:id="@+id/imgShowDesc"
                    android:layout_alignParentRight="true"
                    app:tint="@color/black"
                    android:src="@drawable/ic_down_arrow_solid"
                    android:layout_width="40dp"
                    android:layout_height="40dp"/>
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:visibility="gone"
        android:id="@+id/programDesc"
        android:layout_marginTop="5dp"
        android:layout_alignParentLeft="true"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_below="@+id/layoutHeader"
        android:textSize="12dp"
        android:textColor="#545454"
        android:layout_marginBottom="5dp"
        android:layout_centerInParent="true"
        android:lineSpacingMultiplier="1.3"
        android:fontFamily="@font/gotham_book"
        android:text="-"
        android:ellipsize="end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_below="@+id/programDesc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <View
            android:layout_marginTop="15dp"
            android:layout_marginRight="23dp"
            android:background="@color/gray"
            android:layout_centerInParent="true"
            android:layout_marginLeft="23dp"
            android:layout_toLeftOf="@+id/txtOr"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"/>

        <ImageView
            android:id="@+id/imgBannerAds"
            android:layout_marginTop="20dp"
            android:layout_marginHorizontal="20dp"
            android:layout_below="@+id/channelDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <androidx.core.widget.NestedScrollView
            android:layout_marginTop="5dp"
            android:visibility="visible"
            android:id="@+id/layoutSubtitleHolder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="wrap_content">
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerPrograms"
                    android:layout_marginTop="10dp"
                    android:nestedScrollingEnabled="false"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
    </LinearLayout>

    <TextView
        android:id="@+id/txtNoPrograms"
        android:textAlignment="center"
        android:visibility="gone"
        android:fontFamily="@font/gotham_bold"
        android:textSize="22dp"
        android:layout_centerInParent="true"
        android:textColor="@color/black"
        android:layout_gravity="center"
        android:text="Episodes coming soon!"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <ProgressBar
        android:id="@+id/loadingPrograms"
        android:layout_centerInParent="true"
        android:indeterminateTint="@color/red"
        android:layout_width="30dp"
        android:layout_height="30dp"/>
</RelativeLayout>