<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".ui.account.registration.RegistrationActivity">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_register_background" />

                <ImageView
                    android:layout_marginLeft="20dp"
                    android:background="@drawable/ic_radyonow_logo"
                    android:scaleType="fitXY"
                    android:layout_width="170dp"
                    android:layout_height="170dp"/>

            </RelativeLayout>

            <LinearLayout
                android:layout_marginTop="15dp"
                android:id="@+id/layoutSignupFields"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="Almost there!"
                    android:textColor="@color/black"
                    android:textSize="22sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/century_gothic_regular"
                    android:text="Please add your birthday and you're good to go."
                    android:textSize="15sp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="10dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:text="Date of Birth"
                    android:textColor="@color/black"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/bDate"
                    android:gravity="start|center"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="6dp"
                    style="@style/EditTextTheme"
                    android:textSize="14sp"
                    android:hint="MM/DD/YYYY" />

                <TextView
                    android:layout_marginTop="6dp"
                    android:text="Birth Date is required!"
                    android:id="@+id/bDateErr"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/ErrTextView"
                    android:visibility="gone"/>

                <LinearLayout
                    android:layout_marginTop="20dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <CheckBox
                        android:buttonTint="@color/red"
                        android:id="@+id/checkbox"
                        android:layout_width="30dp"
                        android:layout_height="30dp"/>

                    <TextView
                        android:id="@+id/txtAgreeTerms"
                        android:textSize="12dp"
                        android:layout_gravity="center"
                        android:fontFamily="@font/gotham_medium"
                        android:text="@string/terms_add_birthdate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>

                <RelativeLayout
                    android:layout_marginHorizontal="40dp"
                    android:layout_marginTop="15dp"
                    android:paddingVertical="15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <Button
                        android:id="@+id/userRegister"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:background="@drawable/bg_rounded_button"
                        android:layout_centerInParent="true"
                        android:enabled="false"
                        android:fontFamily="@font/gotham_medium"
                        android:text="@string/sign_up"/>

                    <RelativeLayout
                        android:id="@+id/layoutLoading"
                        android:visibility="gone"
                        android:layout_centerInParent="true"
                        android:background="@drawable/bg_rounded_button"
                        android:layout_width="match_parent"
                        android:layout_height="50dp">

                        <com.wang.avi.AVLoadingIndicatorView
                            android:layout_centerInParent="true"
                            android:id="@+id/signUpLoading"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:visibility="visible"
                            app:indicatorName="BallBeat"
                            app:indicatorColor="@color/white"/>
                    </RelativeLayout>
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:visibility="gone"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:layout_marginTop="60dp"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:id="@+id/linearLayoutMessage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:textColor="@color/red"
                    android:textAlignment="center"
                    android:fontFamily="@font/gotham_medium"
                    android:text="@string/thank_you_for_signing_up"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:layout_marginTop="15dp"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:textAlignment="center"
                    android:lineSpacingMultiplier="0"
                    android:lineSpacingExtra="25sp"
                    android:fontFamily="@font/gotham_light"
                    android:text="@string/signup_message"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <Button
                    android:id="@+id/btnGotIt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="40dp"
                    android:layout_marginTop="30dp"
                    android:textColor="@color/white"
                    android:fontFamily="@font/gotham_medium"
                    android:paddingVertical="15dp"
                    android:text="Got it!"
                    android:textStyle="bold"
                    android:layout_marginBottom="20dp"/>
            </LinearLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</RelativeLayout>