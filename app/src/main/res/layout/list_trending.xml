<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_marginHorizontal="20dp"
    android:layout_marginTop="28dp">

    <com.mikhaellopez.circularimageview.CircularImageView
        android:id="@+id/profilePic"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:foreground="@drawable/fg_circular_green"
        android:src="@drawable/ic_login"
        app:civ_border_width="3dp"
        app:civ_border="true" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_toLeftOf="@+id/layoutShareContent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/profilePic"
        android:layout_alignBottom="@id/profilePic"
        android:layout_toRightOf="@id/profilePic"
        android:gravity="start|center"
        android:paddingStart="5dp"
        android:paddingLeft="5dp">

        <TextView
            android:id="@+id/profileName"
            android:lines="1"
            android:ellipsize="end"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Profile Name"
            android:textColor="@color/black"
            android:textSize="18dp"
            android:lineSpacingMultiplier="0"
            android:lineSpacingExtra="6dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/postTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lines="1"
            android:textSize="10dp"
            android:ellipsize="end"
            android:layout_below="@id/profileName"
            android:textColor="@color/gray"
            android:text="Subtitle" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layoutShareContent"
        android:layout_width="wrap_content"
        android:layout_alignParentRight="true"
        android:orientation="horizontal"
        android:layout_alignTop="@id/profilePic"
        android:layout_alignBottom="@id/profilePic"
        android:layout_marginRight="16dp"
        android:gravity="center"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/share"
            android:layout_width="30dp"
            android:src="@drawable/ic_share"
            app:tint="@color/black"
            android:layout_marginRight="16dp"
            android:layout_height="30dp"
            android:padding="5dp"/>

        <ImageView
            android:id="@+id/download"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:padding="5dp"
            android:src="@drawable/ic_options_horizontal" />
    </LinearLayout>

    <ImageView
        android:id="@+id/postThumb"
        android:layout_width="match_parent"
        android:layout_height="240dp"
        android:layout_below="@id/profilePic"
        android:layout_marginTop="9dp"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_signup"/>
    <TextView
        android:id="@+id/postTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/postThumb"
        android:lines="2"
        android:ellipsize="end"
        android:text="Title - Singer"
        android:layout_marginTop="13dp"
        android:textSize="13dp"
        android:lineSpacingMultiplier="0"
        android:lineSpacingExtra="18dp"
        android:textColor="@color/black"
        android:textStyle="bold"/>

</RelativeLayout>