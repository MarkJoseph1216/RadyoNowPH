<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.dashboard.favorites.FavoritesFragment">

    <!-- TODO: Update blank fragment layout -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/favoritesRecycler"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <RelativeLayout
        android:id="@+id/noContent"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:orientation="vertical">
            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_centerInParent="true"
                android:src="@drawable/ic_heart_shaded"
                android:layout_marginBottom="25dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Want to add to favorites?"
                android:textSize="20dp"
                android:fontFamily="@font/montserrat_medium"
                android:layout_marginBottom="13dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/favorites_empty_text"
                android:textSize="12dp"
                android:layout_marginHorizontal="30dp"
                android:fontFamily="@font/montserrat_light"
                android:layout_marginBottom="39dp"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/gray"
                android:layout_marginHorizontal="20dp"
                android:layout_marginBottom="39dp"/>
            <TextView
                android:id="@+id/browseContent"
                android:layout_width="251dp"
                android:layout_height="49dp"
                android:background="@drawable/bg_rounded_button"
                android:text="Browse"
                android:gravity="center"
                android:fontFamily="@font/montserrat_medium"
                android:textColor="@color/white"
                android:textSize="18dp"/>
        </LinearLayout>
    </RelativeLayout>

    <ProgressBar
        android:layout_centerInParent="true"
        android:indeterminateTint="@color/red"
        android:id="@+id/loadingProgress"
        android:layout_width="35dp"
        android:layout_height="35dp"/>

</RelativeLayout>