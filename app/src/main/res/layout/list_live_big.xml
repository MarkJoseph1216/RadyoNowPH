<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginVertical="10dp"
    android:layout_marginHorizontal="5dp"
    android:layout_marginBottom="10dp"
    android:layout_gravity="center"
    android:layout_height="wrap_content">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/playlistThumb"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="fitCenter"
            android:layout_marginBottom="5dp"
            app:srcCompat="@drawable/ic_login"/>

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        app:cardCornerRadius="3dp"
        android:visibility="gone"
        android:layout_alignRight="@+id/playlistThumb"
        android:layout_alignTop="@+id/playlistThumb"
        android:layout_margin="5dp"
        app:cardBackgroundColor="@color/lightGray"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/playlistThumb">
        <TextView
            android:id="@+id/playlistItems"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_live_rating_star_12dp"
            android:drawableTint="@color/black"
            android:text="4.7"
            android:layout_marginHorizontal="3dp"
            android:gravity="center"
            android:textSize="12sp"/>
    </androidx.cardview.widget.CardView>
    <TextView
        android:layout_marginTop="8dp"
        android:maxLines="1"
        android:ellipsize="end"
        android:id="@+id/playlistName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="RADIO STATION"
        android:layout_alignLeft="@+id/playlistThumb"
        android:layout_alignRight="@+id/playlistThumb"
        android:layout_centerHorizontal="true"
        android:lineSpacingMultiplier="0"
        android:lineSpacingExtra="19dp"
        android:layout_below="@+id/playlistThumb"
        android:textSize="15dp"/>

    <TextView
        android:id="@+id/liveRadioStationSubtitle"
        android:layout_width="130dp"
        android:visibility="gone"
        android:layout_height="wrap_content"
        android:layout_below="@+id/playlistName"
        android:layout_alignLeft="@+id/playlistThumb"
        android:layout_alignRight="@+id/playlistThumb"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="-1dp"
        android:layout_marginRight="-2dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="RADIO Desc"
        android:textColor="@color/gray"
        android:textSize="12dp" />
</RelativeLayout>