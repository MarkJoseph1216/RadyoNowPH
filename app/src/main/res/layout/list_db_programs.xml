<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="10dp">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/programsThumbContainer"
            android:layout_width="match_parent"
            android:layout_marginHorizontal="10dp"
            android:layout_height="wrap_content">
            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/programsThumb"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginBottom="3dp"
                android:scaleType="fitCenter"
                app:shapeAppearanceOverlay="@style/roundedAll10dp"
                app:srcCompat="@drawable/ic_login"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintDimensionRatio="H,1:1"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0"/>
        </androidx.constraintlayout.widget.ConstraintLayout>


        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/programsThumbContainer"
            android:layout_alignEnd="@+id/programsThumbContainer"
            android:layout_alignRight="@+id/programsThumbContainer"
            android:layout_margin="5dp"
            android:visibility="gone"
            app:cardBackgroundColor="@color/lightGray"
            app:cardCornerRadius="3dp">

            <TextView
                android:id="@+id/playlistItems"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="3dp"
                android:drawableLeft="@drawable/ic_live_rating_star_12dp"
                android:drawableTint="@color/black"
                android:gravity="center"
                android:text="4.7"
                android:textSize="12sp" />
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/programsTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/programsThumbContainer"
            android:layout_alignLeft="@+id/programsThumbContainer"
            android:layout_alignRight="@+id/programsThumbContainer"
            android:layout_centerHorizontal="true"
            android:ellipsize="end"
            android:fontFamily="@font/century_gothic_bold"
            android:gravity="center"
            android:lineSpacingMultiplier="1.08"
            android:maxLines="2"
            android:text="RADIO STATION"
            android:textSize="10.3dp" />

        <TextView
            android:id="@+id/programsSubtitle"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/programsTitle"
            android:layout_alignLeft="@+id/programsThumbContainer"
            android:layout_alignRight="@+id/programsThumbContainer"
            android:layout_centerHorizontal="true"
            android:ellipsize="end"
            android:fontFamily="@font/metropolis_medium"
            android:gravity="center"
            android:maxLines="1"
            android:text="RADIO Desc"
            android:textColor="@color/gray"
            android:textSize="10dp"
            android:visibility="visible" />

    </RelativeLayout>
</LinearLayout>
