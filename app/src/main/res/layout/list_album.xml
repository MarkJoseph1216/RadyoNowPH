<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="10dp"
    android:layout_marginVertical="20dp"
    android:layout_gravity="center"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    
    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/albumThumb"
        android:layout_width="180dp"
        android:layout_height="220dp"
        app:srcCompat="@drawable/ic_login"
        android:scaleType="centerCrop"
        app:shapeAppearanceOverlay="@style/rounded20dp"/>

    <TextView
        android:id="@+id/albumTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/albumThumb"
        android:text="Loading..."
        android:layout_marginTop="10dp"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/albumSongNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/albumTitle"
        android:text="Loading..."
        android:textSize="12sp" />

    <TextView
        android:id="@+id/albumRating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/albumThumb"
        android:layout_alignRight="@id/albumThumb"
        android:layout_marginTop="10dp"
        android:text="7.07"
        android:textColor="@color/black"
        android:textSize="12sp"
        android:textStyle="bold" />

</RelativeLayout>