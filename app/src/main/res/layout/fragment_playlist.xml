<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.dashboard.home.playlist.PlaylistFragment">

    <!-- TODO: Update blank fragment layout -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:animateLayoutChanges="true"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <RelativeLayout
                android:id="@+id/playlistCreate"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:background="@drawable/bg_round_gray"
                android:layout_marginTop="20dp"
                android:layout_marginHorizontal="20dp">
                <ImageView
                    android:id="@+id/plusImg"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_plus_sign"
                    app:tint = "@color/red"
                    android:layout_marginLeft="10dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Create Playlist"
                    android:textColor="@color/red"
                    android:layout_marginRight="15dp"
                    android:layout_toRightOf="@id/plusImg"
                    android:layout_centerVertical="true"
                    android:textSize="14dp"
                    android:fontFamily="@font/gotham_bold"
                    android:layout_marginLeft="3dp"
                    android:textStyle="bold"/>
            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:gravity="center"
                android:layout_height="wrap_content">
                <androidx.recyclerview.widget.RecyclerView
                    android:visibility="gone"
                    android:id="@+id/itemsHeaderRecycler"
                    android:layout_width="wrap_content"
                    android:nestedScrollingEnabled="false"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:layout_marginTop="10dp"
                android:visibility="gone"
                android:id="@+id/itemsRecycler"
                android:layout_marginBottom="10dp"
                android:layout_width="match_parent"
                android:nestedScrollingEnabled="false"
                android:layout_height="wrap_content" />

            <include layout="@layout/import_shimmer_allplaylist"/>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</FrameLayout>